{
	"compilerOptions": {
		"target": "ES6",
		"module": "es2015",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"noImplicitAny": true,

		// Tells TypeScript to read JS files, as
		// normally they are ignored as source files
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,

		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": [ "assets/build", "tests" ]
}
